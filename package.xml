  </description>
  <author>Ken Conley</author>
  <author email="eitan@hidof.com">Eitan Marder-Eppstein</author>
  <maintainer email="dthomas@willowgarage.com">Dirk Thomas</maintainer>
  <license>BSD</license>
  <copyright>Willow Garage</copyright>
  <url>http://www.ros.org/wiki/rosdoc_lite</url>
  <build_type>python_distutils</build_type>

  <build_depend>catkin</build_depend>
  <run_depend>epydoc</run_depend>
  <run_depend>doxygen</run_depend>
  <run_depend>python-yaml</run_depend>
  <run_depend>python-sphinx</run_depend>
  <run_depend>genmsg</run_depend>
  <run_depend>python-rospkg</run_depend>
